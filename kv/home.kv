<WhiteBlueButton@MDRaisedButton>
    md_bg_color: 1, 1, 1, 1
    text_color: 0, 0.5, 1, 1
    on_press:
        self.md_bg_color = (0, 0.5, 1, 1)
        self.text_color = (1, 1, 1, 1)
    on_release:
        self.md_bg_color = (1, 1, 1, 1)
        self.text_color = (0, 0.5, 1, 1)
    size_hint: 1, None
    height: dp(48)
    elevation: 0


<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "56dp"
            padding: "10dp"
            md_bg_color: 0, 0.5, 1, 1

            MDLabel:
                text: "CUYBOT V1"
                halign: "center"
                font_style: "H5"
                font_name: "Titillium Web Bold"
                theme_text_color: "Custom"
                text_color: "white"

        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                padding: dp(16)
                spacing: dp(12)
                size_hint_y: None
                height: self.minimum_height

                MDLabel:
                    text: "DASHBOARD"
                    font_style: "H4"
                    halign: "center"
                    bold: True
                    font_name: "Titillium Web Bold"
                    size_hint_y: None
                    height: self.texture_size[1] + dp(12)

                GridLayout:
                    cols: 2
                    spacing: dp(10)
                    size_hint_y: None
                    height: self.minimum_height

                    MDCard:
                        orientation: "vertical"
                        padding: dp(10)
                        size_hint_y: None
                        height: dp(80)
                        MDLabel:
                            text: "Koneksi"
                            halign: "center"
                            font_name: "Titillium Web"
                        MDLabel:
                            text: "Connected"
                            halign: "center"
                            font_name: "Titillium Web Bold"
                            bold: True

                    MDCard:
                        orientation: "vertical"
                        padding: dp(10)
                        size_hint_y: None
                        height: dp(80)
                        MDLabel:
                            text: "Baterai"
                            halign: "center"
                            font_name: "Titillium Web"
                        MDLabel:
                            text: "98%"
                            halign: "center"
                            font_name: "Titillium Web Bold"
                            bold: True

                    MDCard:
                        orientation: "vertical"
                        padding: dp(10)
                        size_hint_y: None
                        height: dp(80)
                        MDLabel:
                            text: "Volume"
                            halign: "center"
                            font_name: "Titillium Web"
                        MDLabel:
                            text: "70%"
                            halign: "center"
                            font_name: "Titillium Web Bold"
                            bold: True

                    MDCard:
                        orientation: "vertical"
                        padding: dp(10)
                        size_hint_y: None
                        height: dp(80)
                        MDLabel:
                            text: "Mode Mata"
                            halign: "center"
                            font_name: "Titillium Web"
                        MDLabel:
                            text: "Smile"
                            halign: "center"
                            bold: True
                            font_name: "Titillium Web Bold"

                    MDCard:
                        orientation: "vertical"
                        padding: dp(10)
                        size_hint_y: None
                        height: dp(80)
                        MDLabel:
                            text: "Navigasi"
                            halign: "center"
                            font_name: "Titillium Web"
                        MDLabel:
                            text: "Kanan"
                            halign: "center"
                            bold: True
                            font_name: "Titillium Web Bold"

                    MDCard:
                        orientation: "vertical"
                        padding: dp(10)
                        size_hint_y: None
                        height: dp(80)
                        MDLabel:
                            text: "Power"
                            halign: "center"
                            font_name: "Titillium Web"
                        MDLabel:
                            text: "ON"
                            halign: "center"
                            bold: True
                            font_name: "Titillium Web Bold"

                GridLayout:
                    cols: 2
                    spacing: dp(10)
                    padding: [0, 0, 0, 0]
                    size_hint_x: 1
                    size_hint_y: None
                    height: self.minimum_height

                    MDBoxLayout:
                        padding: dp(10)
                        size_hint_y: None
                        height: dp(60)
                        WhiteBlueButton:
                            text: "Aktifkan Notif"
                            size_hint_x: 1
                            font_name: "Titillium Web Bold"

                    MDBoxLayout:
                        padding: dp(10)
                        size_hint_y: None
                        height: dp(60)
                        WhiteBlueButton:
                            text: "Aktifkan Cuaca"
                            size_hint_x: 1
                            font_name: "Titillium Web Bold"

                    MDBoxLayout:
                        padding: dp(10)
                        size_hint_y: None
                        height: dp(60)
                        WhiteBlueButton:
                            text: "Aktifkan Navigasi"
                            size_hint_x: 1
                            font_name: "Titillium Web Bold"

                    MDBoxLayout:
                        padding: dp(10)
                        size_hint_y: None
                        height: dp(60)
                        WhiteBlueButton:
                            text: "Aktifkan Jam"
                            size_hint_x: 1
                            font_name: "Titillium Web Bold"

                MDCard:
                    size_hint_y: None
                    height: dp(260)
                    size_hint_x: 1 
                    radius: [12, 12, 12, 12]
                    md_bg_color: app.theme_cls.bg_dark
                    padding: dp(8)

                    MDLabel:
                        text: "Preview OLED (Video Simulasi)"
                        halign: "center"
                        font_name: "Titillium Web Bold"
        

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "56dp"
            spacing: dp(56)
            md_bg_color: 0, 0.5, 1, 1  # Warna biru seperti button
            padding: "0dp"
            pos_hint: {"bottom": 1}

            Widget:  # Spacer kiri

            MDIconButton:
                icon: "home"
                icon_size: "28sp"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDIconButton:
                icon: "cog"
                icon_size: "28sp"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            MDIconButton:
                icon: "account"
                icon_size: "28sp"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

            Widget:  # Spacer kanan

